<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity"
    android:background="#FFFFFF"
    >

    <ImageView
        android:id="@+id/ford_logo"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:padding="5dp"
        android:src="@drawable/ford_logo" />

    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="379dp"
        android:layout_height="416dp"
        android:layout_below="@+id/ford_logo" />

    <ImageButton
        android:id="@+id/camera_image_btn"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_below="@+id/texture_view"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/camera_icon" />

    <TextView
        android:id="@+id/camera_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/camera_image_btn"
        android:layout_marginTop="4dp"
        android:text="Take a picture" />

    <ImageButton
        android:id="@+id/gallery_image_btn"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/camera_image_btn"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/gallery_icon" />

    <TextView
        android:id="@+id/gallery_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gallery_image_btn"
        android:layout_below="@id/gallery_image_btn"
        android:layout_marginTop="5dp"
        android:text="Choose an image" />

</RelativeLayout>

